---
export interface Porps {
  image: string;
  number: string;
  title: string;
  desc: string;
}

const { image, number, title, desc } = Astro.props;
---

<article class="sup-card">
  <img src={image} width="100" height="125" />
  <div class="sup-card-body">
    <h1 class="sup-card-number">{number}</h1>
    <h3 class="sup-card-title">{title}</h3>
    <p class="sup-card-desc">
      {desc}
    </p>
  </div>
</article>
<style lang="scss">
  .sup-card {
    display: flex;
    .sup-card-body {
      margin-left: 25px;
      display: flex;
      flex-direction: column;
      .sup-card-number {
        font-size: 2rem;
        margin: 0;
        color: var(--color-ghost);
      }
      .sup-card-title {
        margin: 12px 0px;
      }
      .sup-card-desc {
        margin-top: 0px;
      }
    }
  }
</style>
